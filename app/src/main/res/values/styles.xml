<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name = "Widget.AppTheme.MenuButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">

        <item name="iconTint">@color/icon_button_tint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>

    </style>

    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name = "Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/like_button_tint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>


    <style name = "Widget.AppTheme.ShareButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>


    <style name = "Widget.AppTheme.VisibilityButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/icon_button_tint</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>

    <dimen name="icon_button_min_size">48dp</dimen>
    <dimen name="icon_button_padding">16dp</dimen>
    <color name="icon_button_tint">#000000</color>

</resources>